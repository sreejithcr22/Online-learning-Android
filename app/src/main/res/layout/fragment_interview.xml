<FrameLayout
    android:id="@+id/container"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="?attr/mainCardbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">



    ...
    <include layout="@layout/interview_layout"
        android:id="@+id/interview_layout">

    </include>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="0dp"

        android:layout_gravity="bottom"

        android:id="@+id/fabtoolbar_toolbar"

        android:layout_width="match_parent"
        android:layout_height="@dimen/interview_layout_bottom_bar_height">



        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <View
                android:id="@+id/interview_bottom_bar_shadow"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/toolba_shadow"></View>

            <LinearLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="?attr/secondaryColor"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:background="?android:attr/selectableItemBackground"

                    android:id="@+id/prevTip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_previous"/>


                <View android:layout_height="match_parent"
                    android:id="@+id/fav_seperator"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:background="?attr/progressTextColor"/>





                <ImageButton
                    android:background="?android:attr/selectableItemBackground"

                    android:id="@+id/fav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_fav"/>

                <View android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:background="?attr/progressTextColor"/>



                <ImageButton
                    android:background="?android:attr/selectableItemBackground"


                    android:id="@+id/share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_share"/>

                <View android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:background="?attr/progressTextColor"/>



                <ImageButton

                    android:background="?android:attr/selectableItemBackground"

                    android:id="@+id/nextTip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_right_arrow"/>



                ...

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>




</FrameLayout>
